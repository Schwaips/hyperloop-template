<% helpers.simple_form_for :form do |f| %>
  <%= f.input :password,
            as: :password,
            wrapper: :password,
            wrapper_html: {
              class: "form__wrapper--default",
              style: "width: 300px;",
              data: {
                controller: "form--password--password-component",
                "form--password--password-component_svg_eye_value": helpers.svg_tag('eye'),
                "form--password--password-component_svg_eye_slash_value": helpers.svg_tag('eye-slash')
              }
            },
            label: @label,
            placeholder: @placeholder,
            required: @required,
            hint: @hint,
            error: @error,
            disabled: @disabled %>
<% end %>
